<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/backimg">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="246dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ctd_steps"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sv_logo2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="51dp"
        android:layout_height="42dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:onClick="opendrawer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_vect"
        android:contentDescription="@string/ctd_steps"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="51dp"
        android:layout_height="42dp"
        android:onClick="svstart"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/power_sel"
        android:contentDescription="@string/ctd_steps"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="250sp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/calibri"
        android:text="@string/selfil"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/addfile"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="12dp"
        android:textSize="14sp"
        android:onClick="addfile"
        android:text="@string/fs_but1"
        android:textColor="@android:color/white"
        android:background="@drawable/buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/rmfile"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/buttons"
            android:onClick="rmfile"
            android:text="@string/fs_but2"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/addfile" />

        <Button
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:onClick="testbut"
            android:text="@string/fs_but2"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons"
            app:layout_constraintStart_toEndOf="@id/rmfile"
            app:layout_constraintBottom_toBottomOf="parent" />

    <ListView
        android:id="@+id/filelst"
        android:layout_width="330dp"
        android:layout_height="352dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <TextView
            android:id="@+id/empty_list_view"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:text="@string/empt_lv"
            android:visibility="gone" />


    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:itemTextColor="@android:color/white"
        app:headerLayout="@layout/nav_headernew"
        android:background="@drawable/drawer_back1">


    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>